
@model IEnumerable<Vidly.Wep.App.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@*@using (Html.BeginForm("Create", "Movies"))
    {<button type="submit" class="btn btn-primary"> New Movie </button> }*@
<input type="button"  class="btn btn-primary" value="New Movie" onclick="location.href = '@Url.Action("Create", "Movies")'" />

<br />
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>